{
  "name": "rumble-raffle-dao",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "server": "yarn workspace @rumble-raffle-dao/server server",
    "update-types": "yarn workspace @rumble-raffle-dao/types update-types",
    "dev": "yarn workspace @rumble-raffle-dao/web dev",
    "build": "yarn workspace @rumble-raffle-dao/web build",
    "start": "yarn workspace @rumble-raffle-dao/web start",
    "hardhat-compile": "yarn workspace @rumble-raffle-dao/smart-contracts hardhat-compile",
    "hardhat-node": "yarn workspace @rumble-raffle-dao/smart-contracts hardhat-node",
    "contract-deploy-local": "yarn workspace @rumble-raffle-dao/smart-contracts contract-deploy-local",
    "prisma-push": "yarn workspace @rumble-raffle-dao/database push",
    "prisma-generate": "yarn workspace @rumble-raffle-dao/database generate"
  },
  "postinstall": "prisma-generate",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 100,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "tabWidth": 2
  },
  "workspaces": [
    "database",
    "rumble",
    "server",
    "smart_contracts",
    "types",
    "web"
  ]
}
