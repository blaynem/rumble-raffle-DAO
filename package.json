{
  "name": "rumble-raffle-dao",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "server": "yarn workspace @rumble-raffle-dao/server server",
    "update-types": "yarn workspace @rumble-raffle-dao/server update-types",
    "dev": "yarn workspace @rumble-raffle-dao/web dev",
    "build": "yarn workspace @rumble-raffle-dao/web build",
    "start": "yarn workspace @rumble-raffle-dao/web start"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "endOfLine": "auto",
    "printWidth": 100,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "tabWidth": 2
  },
  "workspaces": [
    "rumble",
    "server",
    "web"
  ]
